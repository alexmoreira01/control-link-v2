{
    "openapi": "3.0.0",
    "info": {
        "title": "ControlLinks Documentation",
        "description": "This is an API for links control",
        "version": "1.0.0",
        "contact": {
            "email": "alex.moreira.andrade@hotmail.com"
        }
    },
    "paths": {
        "/link": {
            "post": {
                "tags": ["Link"],
                "summary": "Create a link",
                "description": "Create a new link",
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "label": {
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string"
                                    }
                                },
                                "example":{
                                    "label": "title link sample",
                                    "url": "http://vos.kp/ud/sample"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Title already exists!"
                    }

                }
            }
        }
    }
}